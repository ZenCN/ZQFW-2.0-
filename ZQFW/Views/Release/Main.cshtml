<!DOCTYPE html>
<html>
<head>
    <title>主界面</title>
    <meta content="webkit" name="renderer"/>
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <!--------------------------CSS-------------------------->
    <link rel="stylesheet" href="../../CSS/Public/Body.css" />
    <link rel="stylesheet" href="../../CSS/Public/Head.css" />
    <link rel="stylesheet" href="../../CSS/Public/PSW.css" />
    <link rel="stylesheet" href="../../CSS/Public/Button.css" />
    <link rel="stylesheet" href="../../CSS/Public/Dialog.css"/>
    <link rel="stylesheet" href="../../CSS/Pages/Main.css" />
    <!-----------------------------JavaScript-------------------------------->
    <script src="../../Scripts/Library/jquery-1.11.0.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Library/Plugins/jquery.cookie.js" type="text/javascript"></script>
    <script src="../../Scripts/Library/Plugins/easydialog.min.js" type="text/javascript"></script>
    <script src="../../Scripts/Others/Head.js" type="text/javascript"></script>
    <script src="../../Scripts/Application/MainApp.js?t=0720" type="text/javascript"></script>
</head>
    <body class="Scenery">
        @Html.Partial("~/Views/Partial/_Head.cshtml")
        <div class="Main">
            <div>
                <a id="DisasterReport" href="javascript:void(0);" onclick=" App.Main.Report.Disaster() ">
                    <li></li>
                </a>
            </div>
            <div style="display: none;">
                <a id="ReservoirReport" href="javascript:void(0);"onclick=" App.Main.Report.Reservoir() ">
                    <li></li>
                </a>
            </div>
            <div>
                <a id="DisasterHistory" href="javascript:location.href='/historydisaster'">
                    <li></li>
                </a>
            </div>
            <div>
                <a id="StatisticAnalysis" href="/Statistics">
                    <li></li>
                </a>
            </div>
            <div>
                <a id="BaseData" href="javascript:void(0);" onclick=" App.Main.Login.Dialog.Open() ">
                    <li></li>
                </a>
            </div>
            <div>
                <a id="SystemSetting" href="javascript:location.href=location.href.indexOf('?debug=1')?'/systemmaintain?debug=1':'/systemmaintain'">
                    <li></li>
                </a>
            </div>
        </div>
        <div id="Dialog" class="dialog" style="width: 280px; display: none;">
            <div class="top">
                <div class="top_title_left">
                </div>
                <div class="top_title_middle">
                    <span id="dialog_content">基础数据管理</span>
                </div>
                <div class="top_title_right">
                    <img class="Close" src="../../CSS/Img/Public/Close.png" alt="关闭" onclick="App.Main.Login.Dialog.Close()" />
                </div>
            </div>
            <div class="middle">
                <div class="middle_left">
                </div>
                <div class="middle_middle">
                    <table>
                        <tbody>
                            <tr>
                                <td align="right">
                                    <label>密码：</label>
                                </td>
                                <td>
                                    <input type="password" id="lgn_pwd" style="text-align: center; width: 154px;"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style=" text-align: center;">
                                    <label style=" color:Red" id="lgn_error_msg"></label>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style=" text-align: right;">
                                    <input type="button" style="text-align: center;" class="DarkBlue" value="登录" onclick="App.Main.Login.Validate()" />
                                    <input type="button" style="text-align: center;" class="DarkBlue" value="取消" onclick="App.Main.Login.Dialog.Close()" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="middle_right">
                </div>
            </div>
            <div class="bottom">
                <div class="bottom_left">
                </div>
                <div class="bottom_middle">
                </div>
                <div class="bottom_right">
                </div>
            </div>
        </div>
    </body>
</html>
